<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Admin Login â€” The Game With No Name</title>
  <%- include("includes/head") %>
  <meta name="description" content="Admin login for The Game With No Name"/>

  <!-- Basic SEO -->
  <meta name="robots" content="noindex,nofollow">
</head>
<body>
  <header class="topbar">
    <%- include("includes/header") %>
  </header>

  <main class="container">
    <section class="hero" style="padding-top:32px;">
      <div class="pill">Admin</div>
      <h1>Sign in to Admin</h1>
      <p>Enter the admin password to continue.</p>
    </section>

    <section class="card" style="max-width:560px; margin: 0 auto;">
      <% if (typeof error === 'string' && error) { %>
        <div class="notice error" style="margin-bottom:12px;">
          <%= error %>
        </div>
      <% } %>

      <form method="POST" action="/admin/login" class="form vstack" style="gap:12px;">
        <div class="field">
          <label for="password" class="label">Password</label>
          <input id="password" name="password" type="password" autocomplete="current-password" required class="input">
        </div>

        <div class="row" style="display:flex; gap:12px; align-items:center;">
          <button type="submit" class="btn btn-primary">Sign in</button>
          <a href="/" class="btn" style="border-color: color-mix(in oklab, var(--ink-800), white 70%);">Back to site</a>
        </div>
      </form>
    </section>
  </main>

  <footer class="center mt-4" style="padding:24px; color:var(--muted);">
    <%- include("includes/footer") %>
  </footer>
</body>
</html>
