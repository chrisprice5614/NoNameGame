  <script>
    // ---------------- CONFIG (edit these for your campaign) ----------------
    const CAMPAIGN = {
      goal: 80000,             // total goal in USD
      raised: Number(<%- stats.totalCents %>),           // current raised amount
      backers: Number(<%- stats.donors %>),           // current backer count
      deadline: new Date("03/08/2026") // 28 days from now
    };
    // ----------------------------------------------------------------------

    const $ = (sel) => document.querySelector(sel);
    const fmt = new Intl.NumberFormat(undefined, { style: 'currency', currency: 'USD', maximumFractionDigits: 0 });

    const pct = Math.max(0, Math.min(100, Math.round((CAMPAIGN.raised / CAMPAIGN.goal) * 100)));
    const daysLeft = Math.max(0, Math.ceil((CAMPAIGN.deadline - Date.now()) / (1000*60*60*24)));

    $('#statRaised').textContent = fmt.format(CAMPAIGN.raised);
    $('#statGoal').textContent = fmt.format(CAMPAIGN.goal);
    $('#statBackers').textContent = CAMPAIGN.backers.toLocaleString();
    $('#statDays').textContent = daysLeft.toString();
    $('#barPct').textContent = pct + '%';
    $('#barLegendRight').textContent = `${fmt.format(CAMPAIGN.raised)} of ${fmt.format(CAMPAIGN.goal)}`;

    const bar = document.getElementById('barFill');
    requestAnimationFrame(() => { bar.style.width = pct + '%'; bar.style.transition = 'width 900ms cubic-bezier(.22,.8,.32,1)'; });

    

    // Optional: Dark mode toggle for quick preview in console
    // document.documentElement.classList.toggle('dark');
  </script>

